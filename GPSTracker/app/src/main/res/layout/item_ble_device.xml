<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_nameDevice_cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TextView
        android:id="@+id/item_bleDevice_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sizetext_bleDevice_deviceName"
        android:text="BluetoothLE Device"
        android:gravity="left|center"
        android:paddingLeft="10dp"
        android:layout_marginTop="@dimen/marginTop_bleDevice"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_bthConnectBLEDevice"
        />

    <Button
        android:id="@+id/item_bthConnectBLEDevice"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_button"
        android:text="Connect"

        app:layout_constraintLeft_toRightOf="@id/item_bleDevice_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/item_bleDevice_name"
        />
